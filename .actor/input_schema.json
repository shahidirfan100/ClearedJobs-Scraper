{
  "title": "ClearedJobs.Net Scraper",
  "description": "Extract security-cleared job listings from ClearedJobs.net. Search by keywords, location, and other filters.",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrl": {
      "title": "Search URL",
      "type": "string",
      "description": "Custom search URL. If empty, will use filters below.",
      "editor": "textfield",
      "default": "",
      "prefill": ""
    },
    "keywords": {
      "title": "Keywords",
      "type": "string",
      "description": "Job search keywords (e.g., 'Engineer', 'Analyst', 'Security').",
      "editor": "textfield",
      "default": "",
      "prefill": "engineer"
    },
    "location": {
      "title": "Location (City, State, ZIP)",
      "type": "string",
      "description": "Search location or leave empty for all.",
      "editor": "textfield",
      "default": "",
      "prefill": ""
    },
    "city": {
      "title": "City",
      "type": "string",
      "description": "Specific city filter.",
      "editor": "textfield",
      "default": "",
      "prefill": ""
    },
    "state": {
      "title": "State",
      "type": "string",
      "description": "Specific state filter (e.g., 'VA', 'MD', 'DC').",
      "editor": "textfield",
      "default": "",
      "prefill": ""
    },
    "zip": {
      "title": "ZIP Code",
      "type": "string",
      "description": "Specific ZIP code filter.",
      "editor": "textfield",
      "default": "",
      "prefill": ""
    },
    "sort": {
      "title": "Sort Order",
      "type": "string",
      "description": "How to sort job listings.",
      "editor": "select",
      "enum": ["date", "relevance"],
      "enumTitles": ["Most Recent", "Most Relevant"],
      "default": "date",
      "prefill": "date"
    },
    "remote": {
      "title": "Remote Work",
      "type": "string",
      "description": "Filter by remote work option.",
      "editor": "select",
      "enum": ["", "remote", "hybrid"],
      "enumTitles": ["All", "Remote Only", "Hybrid"],
      "default": "",
      "prefill": ""
    },
    "results_wanted": {
      "title": "Maximum Results",
      "type": "integer",
      "description": "Maximum number of jobs to collect.",
      "minimum": 1,
      "maximum": 1000,
      "default": 20,
      "prefill": 20,
      "editor": "number"
    },
    "max_pages": {
      "title": "Maximum Pages",
      "type": "integer",
      "description": "Maximum number of pages to visit.",
      "minimum": 1,
      "maximum": 100,
      "default": 3,
      "prefill": 3,
      "editor": "number"
    },
    "proxyConfiguration": {
      "title": "Proxy Configuration",
      "type": "object",
      "description": "Proxy settings for scraping. Recommended: Residential proxies.",
      "editor": "proxy",
      "default": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"]
      },
      "prefill": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"]
      }
    }
  },
  "required": []
}
